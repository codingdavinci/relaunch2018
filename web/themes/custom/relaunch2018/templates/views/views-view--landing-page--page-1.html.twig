{#
/**
 * @see views-view.html.twig
 */
#}
{%
  set classes = [
    'view',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'row',
  ]
%}

{% set have_upcoming_events = drupal_view_result('landing_page', 'attachment_1')|length > 0 %}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if title %}
    {{ title }}
  {% endif %}
  {{ title_suffix }}
  {% if header %}
    <div class="view-header">
      {{ header }}
    </div>
  {% endif %}
  {% if exposed %}
    <div class="view-filters">
      {{ exposed }}
    </div>
  {% endif %}
  {% if attachment_before %}
    <div class="attachment attachment-before {% if have_upcoming_events %}col-sm-5{% else %}d-none{% endif %}">
      {{ attachment_before }}
    </div>
  {% endif %}

  {% if rows %}
    <div class="view-content {% if have_upcoming_events %}col-sm-7{% else %}col-sm-10 offset-sm-1 col-lg-8 offset-lg-2{% endif %}">
      {{ rows }}
    </div>
  {% elseif empty %}
    <div class="view-empty">
      {{ empty }}
    </div>
  {% endif %}

  {% if pager %}
    {{ pager }}
  {% endif %}
  {% if attachment_after %}
    <div class="attachment attachment-after">
      {{ attachment_after }}
    </div>
  {% endif %}
  {% if more %}
    {{ more }}
  {% endif %}
  {% if footer %}
    <div class="view-footer {% if attachment_before %}col-sm-7 offset-sm-5{% else %}col-12{% endif %}">
      {{ footer }}
    </div>
  {% endif %}
  {% if feed_icons %}
    <div class="feed-icons">
      {{ feed_icons }}
    </div>
  {% endif %}
</div>
