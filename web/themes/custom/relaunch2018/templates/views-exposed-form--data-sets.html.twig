{#
/**
 * @see views-exposed-form.html.twig
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}
<div class="form--inline clearfix row">
  <div class="col-12">
    {{ form.object_type }}
  </div>
  <fieldset class="col-12 collapsible">
    <legend class="{% if not show_secondary_options %}collapsed{% endif %}" role="button" data-toggle="collapse" data-target="#data-sets--secondary-filters" aria-controls="data-sets--secondary-filters">zus√§tzliche Filter</legend>
    <div id="data-sets--secondary-filters" class="{% if show_secondary_options %}show{% endif %} collapse row">
      <div class="col-12">
        {{ form.license }}
      </div>
      <div class="col-12">
        {{ form.metadata_format }}
      </div>
      <div class="col-12">
        {{ form.event_id }}
      </div>
      <div class="col-12">
        {{ form.institution }}
      </div>
      <div class="col-12">
        {{ form.search }}
      </div>
    </div>
  </fieldset>
  <div class="col-12">
    {{ form.actions }}
  </div>
</div>
