{#
/**
 * @see node.html.twig
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>

  <div class="card-img card-img-top">
    <a href="{{ url }}">
      {{ content.field_attributed_image }}
    </a>
  </div>

  <div class="card-body">
    {{ title_prefix }}
    <h2{{ title_attributes.addClass('card-title') }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
    {{ title_suffix }}

    <div{{ content_attributes.addClass('node__content') }}>
      <div class="field field__items field--institution-name">
        <div class="field__item">{{ institution_name|raw|replace({'&shy;': '%shy%'})|escape|replace({'%shy%': '&shy;'})|raw }}</div>
      </div>
      {{ content.field_events }}
      {{ content.field_object_type }}
    </div>
  </div>

</article>
