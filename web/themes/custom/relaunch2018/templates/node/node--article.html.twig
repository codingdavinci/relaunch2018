{#
/**
 * @see node.html.twig
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'container',
    'image-header',
  ]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>
  <div class="article--header-image">
    <div class="container">
      {{ content.field_image }}
    </div>
  </div>

  <div class="article--content-container">
    <div class="row">
      <div class="article--header col-12 col-sm-10 offset-sm-1 col-md-9 offset-md-2">
        <div class="article--content-block">

          {% if not page %}
            {{ title_prefix }}
            <h2{{ title_attributes }}>
              <a href="{{ url }}" rel="bookmark">{{ label }}</a>
            </h2>
            {{ title_suffix }}
          {% endif %}

          {% if display_submitted %}
            <div{{ author_attributes.addClass('node__submitted').addClass('row') }}>
              <div class="col-4">
                {{ node.createdtime|format_date('date_short') }}
              </div>
              <div class="col-8 text-right">
                {{ 'by'|trans }} {{ author_name }}
              </div>
            </div>
          {% endif %}

          {% if page %}
            {{ title_prefix }}
              <h1{{ title_attributes }}>{{ label }}</h1>
            {{ title_suffix }}
          {% endif %}

          <div>
            {{ content.field_tags }}
          </div>

        </div>
      </div>

      <div{{ content_attributes.addClass('node__content') }}>
        {{ content|without('field_tags')|without('field_image') }}
      </div>

    </div>
  </div>

</article>
