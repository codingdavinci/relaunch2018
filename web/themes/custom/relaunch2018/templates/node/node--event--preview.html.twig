{#
/**
 * @see node.html.twig
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
<a href="{{ url }}" rel="bookmark" class="node--link-wrapper node--link-wrapper--{{ node.bundle|clean_class }}">
  <article{{ attributes.addClass(classes) }}{% if color_scheme %} data-color-scheme-hover="{{ color_scheme[0] }}"{% endif %}>

    <div class="node--event--teaser--year">{{ node.field_range[0].end_value|date('Y') }}</div>

    <div class="node--event--teaser--logo"><img alt="Coding da Vinci" src="{{ theme_path }}/img/CDV_Logo_Line_white.svg"></div>

    <h2{{ title_attributes }}>
      {{ node.field_short_title.value|raw }}
    </h2>

  </article>
</a>
