{% apply spaceless %}
{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
    'row',
  ]
%}
{% set attributes = attributes.addClass('clearfix', 'text-formatted') %}

<div{{ attributes.addClass(classes, 'field__items') }}>
  {% set i = 0 %}
  {% for item in items %}
    {% set item_attributes = item.attributes.addClass('field__item') %}
    {% if items|length % 3 == 2 and i == items|length - 1 %}
      {% set item_attributes = item.attributes.addClass('col-lg-8') %}
    {% else %}
      {% set item_attributes = item.attributes.addClass('col-lg-4') %}
    {% endif %}
    <div{{ item_attributes }}>{{ item.content }}</div>
    {% set i = i + 1 %}
  {% endfor %}
</div>

{% endapply %}
