{#
/**
 * @see page.html.twig
 */
#}
{% set tiled_header = is_front or node and node.bundle == 'event' %}

{% if tiled_header %}
  <header role="banner" class="header--tiles">
    <div class="header--tiles--container">
      <div class="header--tiles--overlay"></div>
      <div class="tiles{% if is_front %} tiles--frontpage{% endif %}"></div>
      <div class="container header--tiles--content">
        <div class="header--tile--logo">
          <div class="d-flex h-100 flex-column justify-content-between align-items-center">
            <div class="header--title--logo--image"><img src="{{ theme_path }}/img/CDV_logo.svg"></div>
            <div class="header--title--logo--text d-flex flex-column justify-content-end text-left">
              <h1 class="sr-only">Coding Da Vinci</h1>
              {{ page.header }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
{% endif %}

<div class="layout-container--wrapper">
  <div class="layout-container{% if tiled_header %} header-tiles-above{% endif %}">

    {{ page.primary_menu }}
    {{ page.secondary_menu }}

    {% if not tiled_header %}
      <header role="banner">
        {% if page.admin_tabs %}
          {{ page.admin_tabs }}
        {% endif %}

        {% if page.header_with_background %}
          <div class="header--with-background">
            <div class="container">
              {{ page.header_with_background }}
            </div>
          </div>
        {% else %}
          <div class="container header--default">
            <div class="header--default--brand">
              <img src="{{ theme_path }}/img/CDV_Logo_Line.svg">
            </div>

            {{ page.header }}
          </div>
        {% endif %}
      </header>
    {% endif %}

    {{ page.breadcrumb }}

    {{ page.highlighted }}

    {{ page.help }}

    <main role="main">
      <a id="main-content" tabindex="-1"></a>

      <div class="layout-content{% if is_front %} container{% endif %}">
        {{ page.content }}
      </div>

      {% if page.sidebar_first %}
        <aside class="layout-sidebar-first" role="complementary">
          {{ page.sidebar_first }}
        </aside>
      {% endif %}

      {% if page.sidebar_second %}
        <aside class="layout-sidebar-second" role="complementary">
          {{ page.sidebar_second }}
        </aside>
      {% endif %}

    </main>

    {% if page.footer %}
      <footer role="contentinfo">
        {{ page.footer }}
      </footer>
    {% endif %}

  </div>
</div>
