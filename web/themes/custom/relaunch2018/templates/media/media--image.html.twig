{#
/**
 * @see media.html.twig
 */
#}
{%
  set classes = [
    'media',
    'media--type-' ~ media.bundle()|clean_class,
    not media.isPublished() ? 'media--unpublished',
    view_mode ? 'media--view-mode-' ~ view_mode|clean_class,
  ]
%}
{% apply spaceless %}
<article{{ attributes.addClass(classes) }}>
  {{ title_suffix.contextual_links }}
  {% if content %}
    {{ content.field_media_image }}
    <div class="media__attribution">
      {% if content.field_caption['#items'] is not empty %}
        {{ content.field_caption }}
      {% endif %}
      {% if content.field_creator['#items'] is not empty %}
        {{ content.field_creator }}<span class="media__attribution__comma">,</span>
      {% endif %}
      {% if content.field_license['#items'] is not empty %}
        {{ content.field_license }}
      {% endif %}
    </div>
  {% endif %}
</article>
{% endapply %}
